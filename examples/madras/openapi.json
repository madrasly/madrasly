        "tags": [
          "REAL"
        ],
        "summary": "Delete Playground",
        "description": "Soft delete a playground. Requires API key authentication. ID must be provided in the request body.",
        "security": [
          {
            "ApiKeyAuth": []
          },
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "id"
                ],
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "ID of the playground to delete"
                  }
                }
              },
              "example": {
