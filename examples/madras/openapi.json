                          "workspaceImage": {
                            "type": "string",
                            "description": "Logo/image URL"
                          },
                          "previewUrl": {
                            "type": "string",
                            "format": "uri",
                            "description": "Live preview URL (Vercel deployment)"
                          },
                          "downloadUrl": {
                            "type": "string",
                            "format": "uri",
                            "description": "Download URL for source code ZIP"
                          },
                          "createdAt": {
                            "type": "string",
                            "format": "date-time",
                            "description": "Creation timestamp"
                          },
                          "updatedAt": {
                            "type": "string",
