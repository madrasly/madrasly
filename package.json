    },
    "repository": {
        "type": "git",
        "url": "https://github.com/madrasly/madrasly.git"
    },
    "bugs": {
        "url": "https://github.com/madrasly/madrasly/issues"
    },
    "homepage": "https://github.com/madrasly/madrasly#readme",
    "license": "MIT",
    "dependencies": {
        "@apidevtools/swagger-parser": "^10.1.0",
        "commander": "^11.0.0",
        "fs-extra": "^11.2.0",
        "js-yaml": "^4.1.0",
        "openapi-types": "^12.1.3",
        "prompts": "^2.4.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.10.6",
        "@types/prompts": "^2.4.9",
        "typescript": "^5.3.3",
        "vitest": "^1.1.0"
    }
