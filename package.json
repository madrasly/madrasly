{
    "name": "madrasly",
    "version": "0.1.0",
    "description": "Generate API playgrounds from OpenAPI specifications",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "madrasly": "./dist/cli.js",
        "madras": "./dist/cli.js"
    },
    "files": [
        "dist",
        "templates",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
